@model PagedList.IPagedList<ProjectMamQua.EF.Product>
@using PagedList.Mvc
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section Script{

    <script src="~/Assets/Admin/ProductController.js"></script>
}
<div class="x_content">
    <div class="">


        <div class="clearfix"></div>

        <div class="row">


            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Thùng rác</h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li>
                                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                                <ul class="dropdown-menu" role="menu">
                                    <li>
                                        <a href="#">Settings 1</a>
                                    </li>
                                    <li>
                                        <a href="#">Settings 2</a>
                                    </li>
                                </ul>
                            </li>
                            <li>
                                <a class="close-link"><i class="fa fa-close"></i></a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">

                        <div id="datatable-checkbox_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="dataTables_length" id="datatable-checkbox_length">

                                        <a href="/Admin/Product" class="btn btn-default">
                                            <img src="~/Assets/Admin/images/Arrow-prevoius-2-icon.png" width="30px" height="30px" />
                                        </a>
                                        <a href="" class="btn btn-default" id="btn-remove-deleteAll">
                                            <img src="~/Assets/Admin/images/gtk_undelete.png" width="30px" height="30px" />
                                        </a>
                                        <a href="" class="btn btn-default" id="btn-remove-deleteAll-db">
                                            <img src="~/Assets/Admin/images/deletered.png" width="30px" height="30px" />
                                        </a>

                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="title_right">
                                        <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                                            @using (Html.BeginForm("Index", "Product"))
                                            {
                                                <div class="input-group">
                                                    <input type="text" name="searchString" class="form-control" value="@ViewBag.SearchString" placeholder="Tìm kiếm...">
                                                    <span class="input-group-btn">
                                                        <button class="btn btn-default" type="submit" style="color: black"><span class="glyphicon glyphicon-search"></span></button>
                                                    </span>
                                                </div>
                                            }




                                        </div>
                                    </div>
                                </div>
                            </div>
            
                            <div class="row">
                                <div class="col-sm-12">
                                    <table id="datatable-checkbox" class="table table-striped table-bordered table-hover" role="grid">
                                        <thead>
                                            <tr role="row" class="">
                                                <th>
                                                    <input type="checkbox" id="checkAll">
                                                    <label for="checkAll"></label>
                                                </th>
                                                <th>Hình ảnh</th>
                                                <th>Name</th>
                                                <th>Số lượng</th>
                                                <th>Danh mục</th>
                                                <th>Nhà sản xuất</th>
                                                <th>Ngày tạo</th>
                                                <th>#</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                <tr role="row" id="row_@item.ID" class="odd">
                                                    <td>
                                                        <input type="checkbox" value="@item.ID" name="table_records" id="@item.ID" class="checkbox">
                                                        <label for="@item.ID"></label>
                                                    </td>
                                                    <td>
                                                        <img src="@item.Image" class="img-thumbnail" width="40px" height="40px" />
                                                    </td>
                                                    <td>@item.Name</td>
                                                    <td>@item.Quantity</td>
                                                    <td>@Html.DisplayFor(itemP=>item.ProductCategory.Name)</td>
                                                    <td>@Html.DisplayFor(itemP=>item.Producer.Name)</td>
                                                    <td>@item.CreateDate</td>
                                                    <td>
                                                        <div class="">
                                                            <div class="">
                                                                <a href="#" data-toggle="tooltip" title="Hủy xóa tạm" class="btn btn-default btn-sm btn-remove-delete-product  " data-id="@item.ID">
                                                                    <img src="~/Assets/Admin/images/undelete.png" width="16px" height="16px" />
                                                                </a>
                                                                <a href="#" data-toggle="tooltip" title="Xóa" class="btn btn-default btn-sm btn-remove-delete-db   " data-id="@item.ID">
                                                                    <img src="~/Assets/Admin/images/Delete.png" width="16px" height="16px" />
                                                                </a>
                                                            </div>
                                                        </div>
                                                    </td>
                                                </tr>
                                            }


                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-12">
                                    <div>
                                        @Html.PagedListPager(Model, page => Url.Action("RecycelBin", new { page, @searchString = @ViewBag.SearchString }))
                                    </div>
                                </div>
                            </div>
                        </div>



                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

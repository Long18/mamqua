@model ProjectMamQua.EF.Sale

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section Script
{
    <script>
        jQuery.browser = {};
        //$('#beginDate,#endDate').datepicker({
        //    changeMonth: true,
        //    changeYear: true
        //});

        $(function () {
            var dateFormat = "mm/dd/yy",
              from = $("#beginDate")
                .datepicker({
                    defaultDate: "+1w",
                    changeMonth: true,
                    numberOfMonths: 3
                })
                .on("change", function () {
                    to.datepicker("option", "minDate", getDate(this));
                }),
              to = $("#endDate").datepicker({
                  defaultDate: "+1w",
                  changeMonth: true,
                  numberOfMonths: 3
              })
              .on("change", function () {
                  from.datepicker("option", "maxDate", getDate(this));
              });

            function getDate(element) {
                var date;
                try {
                    date = $.datepicker.parseDate(dateFormat, element.value);
                } catch (error) {
                    date = null;
                }

                return date;
            }
        });
       
    </script>
}

